<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentContainerFl">

    <TextView
        android:textSize="20sp"
        android:id="@+id/textViewKonten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Konten"
        android:fontFamily="sans-serif"
        android:layout_marginHorizontal="12dp"
        android:textFontWeight="800" />

    <EditText
        android:id="@+id/descriptionEt"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minHeight="100dp"
        android:hint="Masukkan Konten"
        android:cursorVisible="true"
        android:maxLines="3"
        android:layout_below="@id/textViewKonten"
        android:layout_marginHorizontal="12dp" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/textViewPilihGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Pilih Gambar"
        android:layout_below="@id/descriptionEt"
        android:fontFamily="sans-serif"
        android:layout_marginHorizontal="12dp"
        android:textFontWeight="800" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGambar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/textViewPilihGambar"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FF979393">

        <ImageView
        android:id="@+id/imgContentIv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_camera_alt_24"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

   <com.google.android.material.button.MaterialButton
       android:id="@+id/postingBtn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:text="Posting"
       android:layout_below="@id/cardViewGambar"
       android:layout_marginHorizontal="12dp"
       android:backgroundTint="@color/black"
       android:textColor="@android:color/white"
       android:textSize="16sp"/>

</RelativeLayout>
