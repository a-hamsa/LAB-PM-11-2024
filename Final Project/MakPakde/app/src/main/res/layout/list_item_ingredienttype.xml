<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="300dp"
    android:layout_marginEnd="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/li_it_iv_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/li_it_tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to make sushi at home"
                style="@style/TextColor"
                android:maxLines="2"
                android:fontFamily="@font/poppins_semibold"/>
            <TextView
                android:id="@+id/li_it_tv_dietLabels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low-Carb"
                android:textColor="@color/secondaryColor"
                android:fontFamily="@font/poppins_semibold"/>
            <TextView
                android:id="@+id/li_it_tv_cuisineType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mexican"
                style="@style/TextColor"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <ImageButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/li_it_btn_bookmark"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_bookmark_border_24"
            android:elevation="1dp"
            android:background="@drawable/card_button_default"/>

    </LinearLayout>

</LinearLayout>