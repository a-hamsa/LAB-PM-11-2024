<!-- rounded_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/transparent" /> <!-- Warna latar belakang -->
    <stroke
        android:width="2dp"
        android:color="@color/black" /> <!-- Warna border -->
    <corners android:radius="8dp" /> <!-- Jari-jari sudut (untuk membuat border berbentuk bulat) -->
</shape>
