<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PostFragment"
    android:background="@color/sage">

    <RelativeLayout
        android:id="@+id/head_barpost"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:background="@color/orange">

        <TextView
            android:id="@+id/tv_addpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Post"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_konten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konten"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/head_barpost"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardkonten"
        android:layout_width="380dp"
        android:layout_height="90dp"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_konten"
        android:layout_marginTop="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_konten2"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_konten"
            >

            <EditText
                android:id="@+id/et_konten"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:hint="Masukkan Konten"/>

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/pilihgambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Gambar"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/cardkonten"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pilihgambar"
        android:layout_width="380dp"
        android:layout_height="190dp"
        android:layout_below="@+id/pilihgambar"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="18dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/grey">

        <ImageView
            android:id="@+id/iv_pilihgambar"
            android:layout_width="190dp"
            android:layout_height="185dp"
            android:src="@drawable/camera"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_posting"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="POSTING"
        android:textSize="20sp"
        android:backgroundTint="@color/teal"
        android:layout_below="@id/cv_pilihgambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/navigation_bar"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>