<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:id="@+id/head_profile"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageprof"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/lalisa"
        android:layout_marginStart="90dp"
        android:layout_marginTop="110dp"
        android:layout_below="@id/head_profile"/>

    <TextView
        android:id="@+id/imageuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lalisa Manoban"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageprof"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lisa"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="175dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageuser"/>

    <include
        layout="@layout/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>