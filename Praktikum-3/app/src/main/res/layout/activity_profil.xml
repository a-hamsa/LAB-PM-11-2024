<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoprofile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="8dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pp_elva"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
        <TextView
            android:id="@+id/usernameprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/photoprofile"
            android:layout_marginTop="10dp"
            android:text="elva_timang"
            android:textSize="16sp"/>

        <RelativeLayout
            android:id="@+id/pertemanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameprofil"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/followers"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/following"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/followers"
                android:text="Following"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/jumlahpertemanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pertemanan"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/jmlflowers"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="1.555"
                android:textSize="18sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/jmlflowing"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/jmlflowers"
                android:text="783"
                android:textSize="18sp"
                android:gravity="center"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textposting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jumlahpertemanan"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Postingan"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/gambarpost"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textposting"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/post_elva" />

    </RelativeLayout>
</RelativeLayout>