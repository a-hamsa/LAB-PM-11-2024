<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostinganActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardpost1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="30dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/pp_elva"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="elva_timang"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/pp"/>
            <ImageView
                android:id="@+id/postingan"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_below="@+id/pp"
                android:layout_marginTop="8dp"
                android:src="@drawable/post_elva" />
<!--            <TextView-->
<!--                android:id="@+id/nama_capt"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/postingan"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:layout_marginLeft="4dp"-->
<!--                tools:text="elva_timang"-->
<!--                android:textStyle="bold" />-->
            <TextView
                android:id="@+id/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/postingan"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                tools:text="Hello world!" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>